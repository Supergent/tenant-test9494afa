{
  "name": "todo-list-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:web:dev\" \"npm:convex:dev\"",
    "web:dev": "cd apps/web && npm run dev",
    "convex:dev": "convex dev",
    "build": "cd apps/web && npm run build",
    "setup": "npm install && npx convex dev --once",
    "storybook": "storybook dev -p 6006 -c packages/components/.storybook",
    "storybook:build": "storybook build -c packages/components/.storybook -o storybook-static"
  },
  "dependencies": {
    "convex": "^1.27.0",
    "@convex-dev/better-auth": "^0.9.5",
    "better-auth": "^1.3.27",
    "@convex-dev/rate-limiter": "^0.2.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "class-variance-authority": "^0.7.0",
    "tailwind-merge": "^2.2.1",
    "lucide-react": "^0.453.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "concurrently": "^9.1.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "turbo": "^2.3.3",
    "vitest": "^2.1.8",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.0"
  }
}
